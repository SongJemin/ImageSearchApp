<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.ImageDetail.ImageDetailActivity">

    <RelativeLayout
            android:id="@+id/detail_top_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/detail_main_img"
            >

    </RelativeLayout>

    <ImageView
            android:id="@+id/detail_main_img"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_centerInParent="true"
            android:background="#000000"
            android:src="@drawable/ic_launcher_background"
            />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/detail_main_img"
            android:background="#000000"
            >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="15dp"
                >
            <TextView
                    android:id="@+id/detail_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="글 제목"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    />

            <TextView
                    android:id="@+id/detail_doc_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="https://developers.kakao.com/"
                    android:textColor="#c3c3c3"
                    android:textSize="15sp"
                    />

            <TextView
                    android:id="@+id/detail_date_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2019. 01. 01"
                    android:textColor="#c3c3c3"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>